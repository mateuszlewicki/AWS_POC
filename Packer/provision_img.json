{

    "variables": {
    "aws_access_key": "{{env `K8S_SECRET_AWS_AKEY`}}",
    "aws_secret_key": "{{env `K8S_SECRET_AWS_SKEY`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-0c9e7070ba2856f49",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "Provision-cluster-{{timestamp}}",
            "tags": {
        "Name": "Provision-cluster" 
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./Ansible/provision_cfg.yml"
    },
    {
      "type": "shell",
      "inline":["sudo systemctl enable vault && sudo systemctl enable consul && sudo systemctl enable fabio &&  sudo systemctl enable nomad"]
    }
  ]
  
}
