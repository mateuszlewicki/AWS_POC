{
    "variables": {
    "aws_access_key": "{{env `K8S_SECRET_AWS_AKEY`}}",
    "aws_secret_key": "{{env `K8S_SECRET_AWS_SKEY`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-00068cd7555f543d5",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "nomad-worker-{{timestamp}}",
      "tags": {
        "Name": "Nomad-worker" 
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./Ansible/worker_cfg.yml"
    },
    {
      "type": "shell",
      "script": "Shell/worker_services.sh"
    }
    
  ]
  
}
