{
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{env `K8S_SECRET_AWS_AKEY`}}",
      "secret_key": "{{env `K8S_SECRET_AWS_SKEY`}}",
      "region": "us-east-1",
      "source_ami": "ami-0c9e7070ba2856f49",
      "instance_type": "t2.micro",
      "ssh_username": "nomad-worker",
      "ami_name": "nomad-worker-{{timestamp}}",
      "tags": {
        "Name": "Nomad-worker" // Tag used by terraform during instance creation
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "script": "../Ansible/worker_cfg.yml"
    }
  ]
  
}
