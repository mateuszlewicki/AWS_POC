{
    "variables": {
    "aws_access_key": "{{env `K8S_SECRET_AWS_AKEY`}}",
    "aws_secret_key": "{{env `K8S_SECRET_AWS_SKEY`}}"
  },    "provisioners": [ {

      "type": "shell",
      "inline": [
        "sleep 10",
        "uname -a",
        "sudo amazon-linux-extras install ansible2",
        "sudo amazon-linux-extras install docker"
      ]

    },
    {
      "type": "ansible-local",
      "playbook_dir": "./Ansible",
      "playbook_file": "./Ansible/worker_cfg.yml",
      "extra_arguments": [
                "--extra-vars", "ansible_user=ec2-user"
      ]
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-00068cd7555f543d5",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "Nomad-worker-{{timestamp}}",
      "tags": {
        "Name": "Nomad-worker" 
      }
    }
  ]
  
}
